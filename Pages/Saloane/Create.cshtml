@page
@model ProiectSteiler.Pages.Saloane.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Salon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Salon.Nume" class="control-label"></label>
                <input asp-for="Salon.Nume" class="form-control" />
                <span asp-validation-for="Salon.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.Locatie" class="control-label"></label>
                <input asp-for="Salon.Locatie" class="form-control" />
                <span asp-validation-for="Salon.Locatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.Adresa" class="control-label"></label>
                <input asp-for="Salon.Adresa" class="form-control" />
                <span asp-validation-for="Salon.Adresa" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Salon.Stilisti" class="control-label"></label>
                <select asp-for="Salon.Stilisti" asp-items="@(ViewData["StilistiList"] as SelectList)" class="form-control"></select>
                <span asp-validation-for="Salon.Stilisti" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Salon.Pret" class="control-label"></label>
                <input asp-for="Salon.Pret" class="form-control" />
                <span asp-validation-for="Salon.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.Categorie" class="control-label"></label>
                <input asp-for="Salon.Categorie" class="form-control" />
                <span asp-validation-for="Salon.Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
